#root
  min-height 100%

.page
  background $color.light
  min-height 100vh
  display flex
  flex-direction column
  justify-content center
  align-items center
  padding-top $gutter * 2
  padding-bottom $gutter * 2

  +$xs()
    padding-top $gutter
    padding-bottom $gutter

  &__center-wrapper
    margin-top -12%

  &__center-message
    width 300px
    text-align center

  &--page404
    &__logo
      $size(90px, 90px)

    &__numbers
      margin-top 0
      margin-bottom 0
      font-size round($font-size.large * 3)

.form
  position relative
  padding $gutter
  margin-bottom 8%
  background $color.white
  min-height 300px
  width 55vw
  min-width 300px
  max-width 600px
  border-radius $border.radius.large
  box-shadow $shadow.coords-x $shadow.coords-y $shadow.size $shadow.stretch $shadow.color

  +$xs()
    width 300px
    max-width 300px
    margin-bottom 0

  &__prev-button
  &__next-button
    position absolute
    bottom $gutter
    width 120px

  &__prev-button
    left $gutter
    $btn-transparent-color($color.primary)

  &__next-button
    right $gutter
    $btn-color($color.white, $color.primary)
